{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@server": ["./"],
      "@server/*": ["./*"],
      "@data": ["./data"],
      "@data/*": ["./data/*"],
      "@core": ["./core"],
      "@core/*": ["./core/*"],
      "@domain": ["./domain"],
      "@domain/*": ["./domain/*"],
      "@rest": ["./api/rest"],
      "@rest/*": ["./api/rest/*"],
      "@test": ["./test"],
      "@test/*": ["./test/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "tsconfig-paths-dist.js"]
}
